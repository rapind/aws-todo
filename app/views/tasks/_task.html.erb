<tr id='<%= dom_id(task) %>'>
	<td><%=h task.description %></td>
	<td><%= task.value %></td>
	<td><%= task.completed_at %></td>
	<td><%= link_to_remote 'Complete', :url => complete_task_path(task), :confirm => 'Are you sure?' %></td>
	<td><%= link_to_remote 'Destroy', :url => task_path(task), :confirm => 'Are you sure?', :method => :delete %></td>
</tr>