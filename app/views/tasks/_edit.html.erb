<span id="<%= dom_id(edit) %>">
    <% form_for edit, :html => { :class => "edit" } do |form| %>
    	<%= check_box_tag 'task[completed]', '1', edit.completed? %>
		<%= form.text_field :name, :class => 'task_name' %>
		<%= form.select :worth, [1,2,5,10] %>
		&nbsp;<%= image_submit_tag 'icons/tag_blue_edit.png', :alt => 'Update Task' %>
		<%= image_tag('icons/spinner.gif', :style => 'display: none', :id => "spinner_#{edit.id}") %>
  	<% end %>
</span>