<tr id="<%= dom_id(task) %>">
	<td><%=h task.description %></td>
	<td><%=h task.completed_at %></td>
	<td><%= link_to 'Show', task %></td>
	<td><%= link_to 'Edit', edit_task_path(task) %></td>
	<td><%= link_to_remote 'Destroy', :url => task_path(task), :confirm => 'Are you sure?', :method => :delete %></td>
</tr>